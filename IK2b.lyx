\begin_inset Formula 
\begin{align*}
\left[\hat{c}_{\nu}^{\dagger}\hat{c}_{\mu},\hat{c}_{\nu'}^{\dagger}\hat{c}_{\mu'}\right] & =\hat{c}_{\nu}^{\dagger}\hat{c}_{\mu'}\delta_{\mu\nu'}-\hat{c}_{\nu'}^{\dagger}\hat{c}_{\mu}\delta_{\nu'\mu}
