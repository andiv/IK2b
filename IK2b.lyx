begin{framed}
\end_layout

\end_inset


\begin_inset Formula 
\begin{align}
PV & =Nk_{B}T &  & \text{thermal equation of state}\\
E & =\frac{3}{2}Nk_{B}T &  & \text{caloric equation of state}\label{eq:caloricState}
\end{align}

\end_inset


