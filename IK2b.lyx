\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\hat{T} & =\sum_{i=1}^{N}\hat{t}_{i}=\sum_{\mu\nu}t_{\mu\nu}\hat{a}_{\mu}^{\dagger}\hat{a}_{\nu}
\end{align*}

